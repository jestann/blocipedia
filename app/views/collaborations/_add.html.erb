<%= form_for [wiki, collaboration] do |f| %>
    <h4>Add collaborators for this wiki.</h4>
    <% if collaboration.errors.any? %>
        <div class="alert alert-danger">
            <h4><%= pluralize(collaboration.errors.count, "error") %>.</h4>
            <ul>
                <% collaboration.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= form_group_tag(collaboration.errors[:user_id]) do %>
        <%= f.label :user_id %>
        <%= f.text_field :user_id, class: 'form-control', placeholder: "Enter user id of collaborator" %>
    <% end %>
    <!-- currently allows you to add yourself as a collaborator ;) -->
    <div class="form-group">
        <%= f.submit "Add Collaborator", class: 'btn btn-success' %>
    </div>
<% end %>
