<div>
    <h1>
        <%= @wiki.title %> <br>
        <small>
            created <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
        </small>
    </h1>
</div>
<div class="row">
    <div class="col-md-8">
        <%= @markdown.render(@wiki.body).html_safe %>
    </div>
    <div class="col-md-4">
        <% if @wiki.private? %>
            <h4>Current Collaborators</h4>
            <% if @wiki.collaborations != [] %>
                <%= render @wiki.collaborations %>
                <br>
            <% else %>
                <p>There are currently no collaborators for this wiki.</p>
                <br>
            <% end %>
            <% if policy(Collaboration.new(wiki: @wiki)).create? %>
                <%= render partial: 'collaborations/add', locals: { wiki: @wiki, collaboration: @wiki.collaborations.new } %>
                <br><br>
            <% end %>
        <% end %>

        <% if policy(@wiki).edit? %>
            <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
        <% end %>
        <% if policy(@wiki).destroy? %>
            <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
        <% end %>
    </div>
</div>